  <title>Lista de Productos</title>
</head>
<body>
  <h1>Lista de Productos</h1>
  <ul>
    {{#each products}}
      <li>
        <h2>{{this.title}}</h2>
        <p>Precio: ${{this.price}}</p>
        <p>Categoría: {{this.category}}</p>
        <p>Disponibilidad: {{this.availability}}</p>
        <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
      </li>
    {{/each}}
  </ul>

