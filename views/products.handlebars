<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-200">
    <div class="container mx-auto my-6">
        <div class="flex justify-end mb-4">
            <a href="/cart" class="bg-blue-500 text-white px-4 py-2 rounded-md">Carrito</a>
        </div>
        <h1 class="text-3xl font-semibold mb-6">Lista de Productos</h1>
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each products}}
                <li class="bg-white p-4 shadow-md rounded-md">
                    <h2 class="text-xl font-semibold mb-2">{{this.title}}</h2>
                    <p class="text-gray-700">Precio: ${{this.price}}</p>
                    <img src="{{this.thumbnail}}" alt="{{this.title}}" class="my-4 max-h-40 object-contain">
                    <p class="text-gray-700">Club: {{this.club}}</p>
                    <p class="text-gray-700">Liga: {{this.league}}</p>
                    <p class="text-gray-700">Temporada: {{this.season}}</p>
                    <button onclick="addToCart('{{this._id}}')" class="bg-green-500 text-white px-4 py-2 rounded-md">Agregar al carrito</button>
                </li>
            {{/each}}
        </ul>

    </div>

  <script>
  // FunciÃ³n para agregar un producto al carrito
function addToCart(productId) {
  const productIdToAdd = productId;
  const cartId = '{{user.cartId}}';

  fetch(`/api/carts/${cartId}/products/${productIdToAdd}`, {
    method: 'PUT',
  })
  .then(response => {
    if (response.status === 200) {
      console.log('Producto agregado al carrito:', productIdToAdd);
      // Actualiza la vista o redirige al usuario a la vista del carrito
      window.location.href = '/cart';  // Redirige a la vista del carrito
    } else {
      console.error('Error al agregar el producto al carrito');
    }
  })
  .catch(error => {
    console.error('Error de red:', error);
  });
}
</script>
</body>
</html>
